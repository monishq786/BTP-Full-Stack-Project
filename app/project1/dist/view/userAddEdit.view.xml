<mvc:XMLView controllerName="project1.controller.userAddEdit"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core" class="d-flex justify-content-center">
    <Page id="userRef" title="User Master" showNavButton="true" navButtonPress="onNavBack">
        <VBox>
            <f:SimpleForm editable="true" layout="ResponsiveGridLayout" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0">
                <f:content>
                    <Label id="userCodelbl" text="User Code" required="true" />
                    <Input id="userCode" value="{UserMasterModel>/UserCode}" required="true" enabled="true" type="Number"/>
                    
                    <Label id="userNamelbl" text="User Name" />
                    <Input id="userName" value="{UserMasterModel>/UserName}" enabled="true" type="Text"/>

                    <!-- <Label id="userDeptCodelbl" text="Dept Code" />
                    <Input id="userDeptCode" value="{UserMasterModel>/Age}"  enabled="true" type="Number"/>
                    
                    <Label id="userDeptNamelbl" text="Dept Name" />
                    <Input id="userDeptName" value="{UserMasterModel>/Salary}" enabled="true" type="Number"/> -->
                </f:content>
            </f:SimpleForm>
        </VBox>
        <footer>
            <Toolbar class="d-flex justify-content-center">
                <ToolbarSpacer />
                <Button id="UbtnSave" type="Emphasized" text="{i18n>save}" press="onSave" />
                <Button id="UbtnUpdate" type="Emphasized" text="{i18n>update}" press="onSave" />
                <Button id="UbtnCancel" type="Reject" text="{i18n>cancel}" press="onNavBack" />
            </Toolbar>
        </footer>
    </Page>
</mvc:XMLView>
