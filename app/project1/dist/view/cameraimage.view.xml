<mvc:View controllerName="project1.controller.cameraimage"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">

    <Page id="cameraPage" title="{i18n>title}">
        <content>
            <VBox fitContainer="true" alignItems="Center">

                <!-- Recognized Text Output -->
                <TextArea id="recognizedText" width="100%" rows="2" placeholder="Vehicle number will appear here" editable="false"/>

                <!-- Camera Controls (Buttons) -->
                <HBox justifyContent="Center" width="100%">
                    <Button text="Open Camera" press="onOpenCamera"/>
                    <Button text="Switch Camera" press="onOpenCamera" visible="false" id="toggleCameraButton" class="sapUiTinyMarginBeginEnd"/>
                    <Button text="Capture Image" press="onCaptureImage" visible="false" id="captureButton" class="sapUiTinyMarginBeginEnd"/>
                </HBox>

                <!-- Video Stream Container -->
                <HBox justifyContent="Center" width="100%">
                    <core:HTML id="videoContainer"/>
                </HBox>

                <!-- Captured Image -->
                <Image id="capturedImage" width="100%" visible="false"/>

            </VBox>
        </content>

    </Page>

</mvc:View>
