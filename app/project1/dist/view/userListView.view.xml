<mvc:XMLView xmlns:mvc="sap.ui.core.mvc" controllerName="project1.controller.userListView"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:commons="sap.suite.ui.commons">

  <Page id="userPage" title="User Master" showNavButton="true" navButtonPress=".navBack">
    <FlexBox justifyContent="End" class="sapUiSmallMargin">
      <Button id="userAddBtn" text="Add User" type="Emphasized" press=".onRouterClick"></Button>
    </FlexBox>

    <ScrollContainer width="100%" horizontal="false" vertical="true" focusable="true" class="scroll-container-height">

      <Table id="UserTable" width="auto" growing="true" growingThreshold="10" items="{path:'UserMasterModel>/value'}" class="sapUiSizeCompact myCustomListClass textAlignCenter" inset="true" sticky="ColumnHeaders,HeaderToolbar" showSeparators="All" showNoData="true">
        <columns>
          <Column width="5%">
            <Text text="User Code" />
          </Column>
          <Column width="10%">
            <Text text="User Name" />
          </Column>
          <Column width="5%">
            <Text text="User Department" />
          </Column>
          <Column width="5%">
            <Text text="Action" />
          </Column>
        </columns>
        <items>
          <ColumnListItem vAlign="Middle">
            <cells>
              <Text text="{UserMasterModel>UserCode}" wrapping="false" />
              <Text text="{UserMasterModel>UserName}" wrapping="false" />

              <Text text="{UserMasterModel>UserDepartment}" wrapping="false" />

              <HBox>
                <items>
                  <Button id="UEditBtn" icon="sap-icon://navigation-right-arrow" width="25px" class="customIconColor" visible="true" press="onAction" />
                </items>
              </HBox>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </ScrollContainer>
  </Page>
</mvc:XMLView>