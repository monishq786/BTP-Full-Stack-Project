<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:card="sap.f.cards"
    xmlns:f="sap.f"
    xmlns:forms="sap.ui.layout.form"
    xmlns:core="sap.ui.core" controllerName="project1.controller.salesorder" height="100%">

    <m:Page id="salesOrderPage" title="Sales Order" showNavButton="true" navButtonPress="backToLanding">

        <ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false">
            <headerTitle>
                <ObjectPageDynamicHeaderTitle>
                    <expandedHeading>
                        <m:Title text="Mohammed Azar" wrapping="true" />
                    </expandedHeading>

                    <snappedHeading>
                        <m:HBox>
                            <m:VBox>
                                <m:Avatar src="./images/adnoclogo.jpg" class="sapUiSmallMarginEnd" />
                            </m:VBox>

                            <m:VBox>
                                <m:Title text="Mohammed Azar" wrapping="true"/>
                            </m:VBox>
                        </m:HBox>
                    </snappedHeading>

                    <snappedTitleOnMobile>
                        <m:Title text="Mohammed Azar"/>
                    </snappedTitleOnMobile>

                </ObjectPageDynamicHeaderTitle>
            </headerTitle>

            <headerContent>
                <m:FlexBox wrap="Wrap" fitContainer="true">
                    <m:Avatar src="./images/adnoclogo.jpg" class="sapUiMediumMarginEnd" displaySize="L"/>

                    <m:HBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                        <m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                            <m:Title text="Plate Detail" class="sapUiTinyMarginBottom" />
                            <m:ObjectStatus text="54321/S" icon="sap-icon://car-rental" class="sapMObjectStatusLarge"/>
                        </m:VBox>

                        <m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                            <m:Title text="Emirates" class="sapUiTinyMarginBottom" />
                            <m:ObjectStatus text="Abu Dhabi" state="Success" class="sapMObjectStatusLarge"/>
                        </m:VBox>

                        <m:VBox class="sapUiLargeMarginEnd">
                            <m:Title text="Model" class="sapUiTinyMarginBottom" />
                            <m:ObjectStatus text="BMW X5" class="sapMObjectStatusLarge"/>
                        </m:VBox>
                    </m:HBox>

                    <m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                        <m:Title text="Payment Information" class="sapUiTinyMarginBottom" />

                        <m:HBox class="sapUiTinyMarginBottom">
                            <m:Label text="Total:" class="sapUiTinyMarginEnd"/>
                            <m:Text text="173.25 AED" class="sapUiSmallMarginBegin"/>
                        </m:HBox>

                        <m:HBox class="sapUiTinyMarginBottom">
                            <m:Label text="Vat:" class="sapUiTinyMarginEnd"/>
                            <m:Text text="8.25 AED" class="sapUiSmallMarginBegin"/>
                        </m:HBox>
                    </m:VBox>

                    <m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                        <m:Title text="Status" class="sapUiTinyMarginBottom" />
                        <m:MessageStrip text="MAHA File is not Updated" type="Warning" showIcon="true" showCloseButton="false" class="">
                        </m:MessageStrip>
                    </m:VBox>
                </m:FlexBox>

            </headerContent>

            <sections >
                <ObjectPageSection titleUppercase="false" id="orderDetailsSection" title="Items">

                <ObjectPageSubSection showTitle="false">

                            <m:HBox width="50%" justifyContent="SpaceBetween">

                                <!-- Left Section - 50% Width -->
                                <m:VBox width="48%" class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                                    <m:HBox class="sapUiTinyMarginBottom">
                                        <m:Label text="Order No:" class="sapUiTinyMarginEnd"/>
                                        <m:Text text="2790000291" class="sapUiSmallMarginBegin"/>
                                    </m:HBox>

                                    <m:HBox class="sapUiTinyMarginBottom">
                                        <m:Label text="Test Type:" class="sapUiTinyMarginEnd"/>
                                        <m:Text text="Re-New" class="sapUiSmallMarginBegin"/>
                                    </m:HBox>

                                    <m:HBox class="sapUiTinyMarginBottom">
                                        <m:Label text="Net:" class="sapUiTinyMarginEnd"/>
                                        <m:Text text="160.25 AED" class="sapUiSmallMarginBegin"/>
                                    </m:HBox>

                                    <m:HBox class="sapUiTinyMarginBottom">
                                        <m:Label text="Vat:" class="sapUiTinyMarginEnd"/>
                                        <m:Text text="10.25 AED" class="sapUiSmallMarginBegin"/>
                                    </m:HBox>

                                    <m:HBox class="sapUiTinyMarginBottom">
                                        <m:Label text="Total:" class="sapUiTinyMarginEnd"/>
                                        <m:Text text="170.50 AED" class="sapUiSmallMarginBegin"/>
                                    </m:HBox>
                                </m:VBox>

                                <!-- Right Section - 50% Width -->
                                <m:VBox width="48%" class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                                    <m:HBox class="sapUiTinyMarginBottom">
                                        <m:Label text="Item:" class="sapUiTinyMarginEnd"/>
                                        <m:Text text="10" class="sapUiSmallMarginBegin"/>
                                    </m:HBox>
                                    <m:HBox class="sapUiTinyMarginBottom">
                                        <m:Button icon="sap-icon://delete" width="25px" visible="true" press="" class="sapUiSmallMarginBegin sapUiTinyMarginEnd"/>
                                    </m:HBox>
                                </m:VBox>

                            </m:HBox>
                        </ObjectPageSubSection>
                </ObjectPageSection>
            </sections>
        </ObjectPageLayout>

        <m:footer>
            <m:Toolbar class="d-flex justify-content-center" design="Transparent" >
                <m:ToolbarSpacer/>
                <m:Button type="Emphasized" text="Save" press="onSavePress" />
                <m:Button type="Emphasized" text="Exit" press="onExitPress" />
                <m:ToolbarSpacer/>
            </m:Toolbar>
        </m:footer>

    </m:Page>

</mvc:View>
