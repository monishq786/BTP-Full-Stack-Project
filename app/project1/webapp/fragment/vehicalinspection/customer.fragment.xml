<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <f:SimpleForm id="customer" editable="true" layout="ColumnLayout" columnsM="3" columnsL="4" columnsXL="5">
        <f:content>
            <Label id="firstnameCLbl" text="{i18n>First Name}" />
            <Input id="firstnameC" editable="false" value="" description="" fieldWidth="100%" />
            
            <Label  labelFor="Last Name" required="true" text="{i18n>Last Name}" />
            <Input id="lastn" editable="true" type="Text" value="" description="" fieldWidth="100%" showValueHelp="true" valueHelpRequest="cflForUser" />

            <Label id="searchTerm" text="Search Term"/>
            <Input id="search" editable="true" value="" description="" fieldWidth="100%" />
            
            <!-- <Label id="emeratesidLbl" text="Emirates Id"/>
            <Input id="emerstes" editable="false"  value="" description="" fieldWidth="100%" /> -->

            <!-- <Label id="emailIdLbl" labelFor="emailId" required="true" text="Emaid Id" />
            <Input id="emailId" editable="true" liveChange="onLiveChange" valueState="None" value="{path: 'EntryFormDataSourceModel>/EmailId', type: 'sap.ui.model.type.String', formatOptions: {pattern: '^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$'}}" description="" fieldWidth="100%" /> -->
            
            <Label id="mobileLbl" labelFor="mobilenum" required="true" text="{i18n>Mobile Number}"/>
            <Input id="mobile" editable="true" type="Text" enabled="true" value="" description="" fieldWidth="100%" />

            <Label id="emailLbl" text="Email Id"/>
            <Input id="email" editable="true"  value="" description="" fieldWidth="100%" />
            
            <Label id="emeratesLbl" labelFor="Emirates" required="true" text="Emirates" />
            <Input id="emerates" fieldWidth="100%" value=""  valueHelpRequest="" />
            
            <Label id="addressLbl" text="{i18n>Address}" />
            <Input id="address" editable="false" value="" placeholder="Enter Address" />

            <Label id="cityLbl" text="{i18n>City}" />
            <Input id="city" editable="false" value="" description="" fieldWidth="100%"/>

            <Label id="countryLbl" text="{i18n>Country}"/>
            <Input id="country" editable="false"  value="" description="" fieldWidth="100%" />
            
            
            <Label id="margin" text="" class="sapUiSmallMarginBottom"/>
            <CheckBox id="noActive"  text="Is Active" select="onSelect" selected="{= ${EntryFormDataSourceModel>/IsActive} === 'Y' }" />
         
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>