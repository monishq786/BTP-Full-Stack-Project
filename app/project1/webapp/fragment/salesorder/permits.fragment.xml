<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <HBox>
        <VBox width="100%">
            <Table id="idPermitTable" mode="MultiSelect" inset="false" items="{
                path: '/Permits',
                sorter: [{ path: 'pinned', descending: true }],
                groupHeaderFactory: '.getGroupHeader'
                 }">

                <columns>
                    <!-- Title Column -->
                    <Column width="10rem">
                        <Text text="Permits No"/>
                    </Column>
                    <Column width="10rem">
                        <Text text="Permits Type"/>
                    </Column>

                    <!-- Description Column -->
                    <Column width="10rem">
                        <Text text="Permits Type in Arabic"/>
                    </Column>

                    <!-- Info Column -->
                    <Column width="10rem">
                        <Text text="Amount"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem vAlign="Middle">

                        <cells>
                            <!-- Title -->
                            <Text text="{permitNo}" />
                            <ObjectIdentifier title="{title}" />

                            <!-- Description -->
                            <Text text="{desc}" />

                            <!-- Info -->
                            <ObjectNumber number="{info}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
