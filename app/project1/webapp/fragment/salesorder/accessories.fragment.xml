<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <HBox justifyContent="SpaceBetween">
        <!-- First Column -->
        <VBox width="48%">
            <List id="accessList" mode="MultiSelect" headerText="Most Frequent Accessories" selectionChange="onSelectionChange" items="{
                path: '/AccessPinned_One',
                filters: [{ path: 'pinned', operator: 'EQ', value1: true }]
            }">
                <items>
                    <StandardListItem title="{title}" description="{desc}" info="{info}" infoStateInverted="true"/>
                </items>
            </List>

            <List id="mainAccessList" mode="MultiSelect" headerText="Other Accessories" selectionChange="onSelectionChange" items="{
                path: '/AccessPinned_Two',
                filters: [{ path: 'pinned', operator: 'NE', value1: true }]
            }">
                <items>
                    <StandardListItem title="{title}" description="{desc}" info="{info}" infoStateInverted="true"/>
                </items>
            </List>
        </VBox>

        <!-- Second Column -->
        <VBox width="50%">
            <List id="accessList1" mode="MultiSelect" headerText=" " selectionChange="onSelectionChange" items="{
                path: '/AccessPinned_Two',
                filters: [{ path: 'pinned', operator: 'EQ', value1: true }]
            }">
                <items>
                    <StandardListItem title="{title}" description="{desc}" info="{info}" infoStateInverted="true"/>
                </items>
            </List>

            <List id="mainAccessList1" mode="MultiSelect" headerText=" " selectionChange="onSelectionChange" items="{
                path: '/AccessUnPinned_Two',
                filters: [{ path: 'pinned', operator: 'NE', value1: true }]
            }">
                <items>
                    <StandardListItem title="{title}" description="{desc}" info="{info}" infoStateInverted="true"/>
                </items>
            </List>
        </VBox>
    </HBox>

</core:FragmentDefinition>